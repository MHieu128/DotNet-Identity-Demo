@model IEnumerable<IdentityDemo.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Manage User(s)";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">User Management</h2>
            <p class="text-muted mb-0">Manage your application users</p>
        </div>
        <button class="btn btn-primary rounded-pill px-4 d-flex align-items-center gap-2">
            <i class="bi bi-plus-circle-fill"></i>
            <span>Add User</span>
        </button>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="px-4 py-3">User</th>
                            <th class="px-4 py-3">Email</th>
                            <th class="px-4 py-3">Status</th>
                            <th class="px-4 py-3">Role</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3">
                                            @item.FullName[0]
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.FullName</div>
                                            <small class="text-muted">ID: @item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4">@item.Email</td>
                                <td class="px-4">
                                    <span class="badge bg-success bg-opacity-10 text-success">Active</span>
                                </td>
                                <td class="px-4">
                                    <span class="badge bg-primary bg-opacity-10 text-primary">User</span>
                                </td>
                                <td class="px-4">
                                    <div class="action-buttons">
                                        <button class="btn btn-link text-primary p-0" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-link text-danger p-0 ms-3" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-2px);
    }
    .avatar {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .table > :not(caption) > * > * {
        padding: 1rem 0;
    }
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--hover-color);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
    }

    .action-buttons {
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }

    tr:hover .action-buttons {
        opacity: 1;
    }
</style>
