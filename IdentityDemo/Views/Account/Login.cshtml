@model LoginViewModel

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg dark-card light-card">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Welcome Back</h2>
                    <form method="post" asp-controller="account" asp-action="login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <div asp-validation-summary="All" class="text-danger mb-3 small"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control dark-input light-input shadow-sm" placeholder="name@example.com" />
                            <label asp-for="Email" class="dark-label light-label"></label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control dark-input light-input shadow-sm" type="password" placeholder="Password" />
                            <label asp-for="Password" class="dark-label light-label"></label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label small dark-label light-label"></label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3 py-2 shadow-sm dark-btn light-btn">Sign In</button>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="register" class="text-decoration-none d-block mb-2 dark-link light-link">Create new account</a>
                        <a asp-action="forgotpassword" class="text-decoration-none small dark-link light-link">Forgot password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth-light.css" />
    <link rel="stylesheet" href="~/css/auth-dark.css" />
}