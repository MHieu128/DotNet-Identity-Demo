@{
    ViewData["Title"] = "Reset Password Instructions Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-envelope-check text-success" style="font-size: 3rem;"></i>
                    <h2 class="card-title mt-3 mb-4">Check Your Email</h2>
                    <div class="card-text text-muted">
                        <p>We've sent password reset instructions to your email address.</p>
                        <hr class="my-4">
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            Can't find the email? Please check your spam folder.
                        </div>
                        <p class="mt-4">
                            Need help? <a href="/Contact" class="text-decoration-none">Contact our support team</a>
                        </p>
                    </div>
                    <a href="/" class="btn btn-primary mt-3">
                        <i class="bi bi-house-door me-2"></i>Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

