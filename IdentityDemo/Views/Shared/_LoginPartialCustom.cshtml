@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        var user = await UserManager.GetUserAsync(User);
        <li class="nav-item">
            <span class="nav-link">
                <i class="bi bi-person-circle me-1"></i>@user?.FullName
            </span>
        </li>
        <li class="nav-item">
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-light">
                    <i class="bi bi-box-arrow-right me-1"></i>Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item me-2">
            <a class="nav-link btn btn-light" asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Login
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-primary" asp-controller="Account" asp-action="Register">
                <i class="bi bi-person-plus me-1"></i>Register
            </a>
        </li>
    }
</ul>